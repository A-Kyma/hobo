<def tag="icon" attrs="size">
  <% size ||= "medium" %>
  <img src="#{this.icon.public_filename(size.to_sym)}" alt="#{this.icon.label}" if="icon"/>
</def>


<def tag="choose-icon">
  <h2 param>Account Picture</h2>

  <icon param/><else><p param="no-icon-message">You have not uplaoded an icon yet</p></else>

  <section class="icon-upload">
    <upload-image-form:new_icon param>
      <after-submit: stay-here/>
    </upload-image-form>
  </section>
</def>
