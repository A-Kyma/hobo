<def tag="recommendations">
  <section>
    <h3>Recommendations</h3>
    <collection part="recommendations"/>

    <p class="recommend-this"><a href="#">Recommend this</a></p>
    <form style="display:none;" with="&new_for_current_user" update="recommendations">
      <label for="comment">Optional Comment</label>
      <input:comment/>
      <submit label="Recommend"/>
    </form>
  </section>
</def>
